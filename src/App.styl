a
	text-decoration: none;
	color: inherit;
ul
	padding: 0;
	-webkit-margin-before: 0;
	-webkit-margin-after: 0;
	-webkit-margin-start: 0;
	-webkit-margin-end: 0;
	-webkit-padding-start: 0;
body
	margin: 0;
	font-family: 'Raleway', sans-serif;

.center
	display: flex;
	align-items: center;
	justify-content: center;

.cta
	margin: 0 auto;
	position: relative;
	border: 1px solid #fff;
	width: 280px;
	height: 50px;
	border-radius: 50px;
	text-align: center;
	line-height: 50px;
	font-size: 28px;
	color: #fff;
	transition: all .1s ease-out;