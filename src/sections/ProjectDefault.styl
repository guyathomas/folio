.project
	display: flex;
	flex-direction: column;
	color: black;
	padding: 2%;
	@media screen and (min-width: 900px)
		justify-content: space-between;
		padding: 2%;
		max-height: 400px;
		&.left
			flex-direction: row
		&.right
			flex-direction: row-reverse
	> *
		padding: 2%;
	.visuals
		max-width: 100%;
		display: flex;
		flex-direction: column;
		@media screen and (min-width: 900px)
			max-width: 75%;
			display: inline-flex;
			flex-direction: row;
			// ^[0].right .visuals
			// 	background-color: blue;
			// ^[0].left .visuals
			// 	background-color: red;
		.screenshot
			display:flex;
			flex-shrink: 0;
			// background-color: black;
			// project .visuals.right .visuals .screenshot
			^[0].right .visuals .screenshot
				justify-content: flex-start;
			^[0].left .visuals .screenshot
				justify-content: flex-end;
			max-height: 400px;
			width: 100%;
			img
				width: 100%;
				height: 100%;
				@media screen and (min-width: 900px)
					width: auto;
