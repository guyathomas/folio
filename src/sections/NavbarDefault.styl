nav.navbar 
	background: rgba(255, 255, 255, 1);
	display: flex;
	align-items: center;
	justify-content: center;
	flex-flow: row nowrap;
	position: fixed;
	width: 100%;
	height: navheight;
	justify-content: space-around;
	z-index: 1;
	box-shadow: rgba(0, 0, 0, 0.40) 0px 5px 5px
	top: 0;
	ul
		display: flex;
		list-style-type: none;
		width:100%;
		li
			align-self: center;
			padding 0 2em
			&:first-child //The Name element
				white-space: nowrap;
				margin-right: auto;
				font-weight: 700;
				font-size: 2em;